<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@drawable/gradient"
    tools:context=".MainActivity2"  >


    <TextView
        android:id="@+id/textView4"
        android:layout_width="297dp"
        android:layout_height="69dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/rounded_cornerp"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="PLAYER INFORMATION"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="158dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="158dp"
        android:layout_height="86dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="116dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/player1"
        android:layout_width="159dp"
        android:layout_height="86dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:hint="Enter Player-1 name"
        android:inputType="text"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <EditText
        android:id="@+id/player2"
        android:layout_width="159dp"
        android:layout_height="86dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="36dp"
        android:background="@drawable/rounded_corner"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:hint="Enter Player-2 name"
        android:inputType="text"
        android:textAllCaps="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginStart="-135dp"
        android:layout_marginTop="-70dp"
        android:background="@drawable/rounded_cornert"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="PLAYER"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="110dp"
        android:layout_height="52dp"
        android:layout_marginStart="-135dp"
        android:layout_marginTop="76dp"
        android:background="@drawable/rounded_cornerb"
        android:fontFamily="sans-serif-condensed-light"
        android:gravity="center"
        android:text="PLAYER"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <Button
        android:id="@+id/startbutton"
        android:layout_width="186dp"
        android:layout_height="90dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/rounded_cornerb"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="START"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:layout_marginTop="37dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:srcCompat="@drawable/img_7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="32dp"
        android:layout_height="75dp"
        android:layout_marginStart="-95dp"
        android:layout_marginBottom="-10dp"
        android:gravity="center"
        android:text="1"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="57dp"
        android:layout_height="83dp"
        android:layout_marginStart="-105dp"
        android:layout_marginTop="-5dp"
        android:gravity="center"
        android:text="2"
        android:textSize="70dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>
